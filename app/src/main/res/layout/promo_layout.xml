<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/fusion_image_view"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/fusion_promo_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/title_promo_text_view"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fusion_image_view"
        android:text="@string/festival_idaman_perempuan"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fusion_image_view"></TextView>

    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_promo_text_view"
        android:text="@string/temukan_kebutuhan_cantik_mu_hemat_pakai_gopay_dengan_cashback_50_klik"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_promo_text_view"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>